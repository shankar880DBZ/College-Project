									</div>
									<div class="movie-info">
										<span>16+</span>
									</div>
								</div>
							</div>
						</a>
						<% }) %>

							<!-- END MOVIE ITEM -->
				</div>
			</div>
		</div>
		<!-- END LATEST MOVIES SECTION -->

