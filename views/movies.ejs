	<% include ./partials/navbar.ejs %>

		<!-- HERO SECTION -->
		<div class="hero-section">
			<!-- HERO SLIDE -->
			<div class="hero-slide">
				<div class="owl-carousel carousel-nav-center" id="hero-carousel">
					<!-- SLIDE ITEM -->
					<% slideMovie.forEach(function(element) { %>
						<div class="hero-slide-item">
							<img src="<%= element.thumbnail_h %>" alt="">
							<div class="overlay"></div>
							<div class="hero-slide-item-content">
								<div class="item-content-wraper">
									<div class="item-content-title top-down">
										<%= element.title %>
									</div>
									<div class="movie-infos top-down delay-2">
										<div class="movie-info">
											<i class="bx bxs-star"></i>
											<span>
												<%= element.rating %>
											</span>
										</div>
										<div class="movie-info">
											<i class="bx bxs-time"></i>
											<span>
												<%= element.duration %> mins
											</span>
										</div>
										<div class="movie-info">
											<span>HD</span>
										</div>
										<div class="movie-info">
											<span>16+</span>
										</div>
									</div>
									<div class="item-content-description top-down delay-4">
										<%= element.description %>
									</div>
									<div class="item-action top-down delay-6">
										<a href="/home/video-player/<%= element.title %>" class="btn btn-hover">
											<i class="bx bxs-right-arrow"></i>
											<span>Watch now</span>
										</a>
									</div>
								</div>
							</div>
						</div>
						<% }) %>
							<!-- END SLIDE ITEM -->
				</div>
			</div>
			<!-- END HERO SLIDE -->

			<!-- TOP MOVIES SLIDE -->
			<div class="top-movies-slide">
				<div class="owl-carousel" id="top-movies-slide">
					<!-- MOVIE ITEM -->
					<% topMovie.forEach(function(element) { %>
						<a href="/home/video-player/<%= element.title %>">
							<div class="movie-item">
								<img src="<%= element.thumbnail_v %>" alt="">
								<div class="movie-item-content">
									<div class="movie-item-title">
										<%= element.title %>
									</div>
									<div class="movie-infos">
										<div class="movie-info">
											<i class="bx bxs-star"></i>
											<span>
												<%= element.rating %>
											</span>
										</div>
										<div class="movie-info">
											<i class="bx bxs-time"></i>
											<span>
												<%= element.duration %> mins
											</span>
										</div>
										<div class="movie-info">
											<span>HD</span>
										</div>
										<div class="movie-info">
											<span>16+</span>
										</div>
									</div>
								</div>
							</div>
						</a>
						<% }) %>
							<!-- END MOVIE ITEM -->
				</div>
			</div>
			<!-- END TOP MOVIES SLIDE -->
		</div>
		<!-- END HERO SECTION -->

		<!-- LATEST MOVIES SECTION -->
		<div class="section">
			<div class="container">
				<div class="section-header">
					<div> latest movies</div>
					<div class="More"><a href="/Movies/more/latestMovies">More <i class="ri-arrow-right-s-line"></i></a>
					</div>
				</div>
				<div class="movies-slide carousel-nav-center owl-carousel">
					<!-- MOVIE ITEM -->
					<% latestMovie.forEach(function(element) { %>
						<a href="/home/video-player/<%= element.title %>" class="movie-item">
							<img src="<%= element.thumbnail_v %>" alt="">
							<div class="movie-item-content">
								<div class="movie-item-title">
									<%= element.title %>
								</div>
								<div class="movie-infos">
									<div class="movie-info">
										<i class="bx bxs-star"></i>
